{
  "name": "techmodel-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/server/dev-server.ts",
    "init-db": "ts-node initialize-db.ts",
    "dc-up": "docker-compose up -d",
    "dc-stop": "docker-compose stop",
    "dc-ps": "docker-compose ps",
    "prod": "tsc && node ./build/server/run-server.js",
    "serve": "node ./build/server/run-server.js",
    "testcov": "nyc mocha -r ts-node/register tests/**/*.test.ts --exit",
    "test": "mocha -r ts-node/register tests/setup.ts tests/**/*.test.ts --timeout 15000 --exit",
    "lint": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --dataSource ./src/dataSource.ts",
    "typeorm-dev": "./node_modules/dotenv-cli/cli.js npm run typeorm",
    "read-excel": "ts-node src/excel-reader.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/techmodel/techmodel-back.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "express": "^4.17.1",
    "google-auth-library": "^8.6.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.2",
    "mssql": "^7.3.0",
    "serialize-error": "^8.0.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.7",
    "typescript": "^4.7.4",
    "winston": "^3.7.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/chai-subset": "^1.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^5.2.7",
    "@types/node": "^18.0.0",
    "@types/sinon": "^7.0.12",
    "@types/supertest": "^2.0.6",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "dotenv": "^8.1.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.1",
    "mocha": "^7.1.2",
    "mysql": "^2.18.1",
    "nyc": "^15.0.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "prettier --write",
        "git add"
      ],
      "package.json": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules",
      "build",
      "package-lock.json"
    ]
  }
}
