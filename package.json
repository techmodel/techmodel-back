{
  "name": "techmodel-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/server/dev-server.ts",
    "prod": "tsc && node ./build/server/run-server.js",
    "serve": "node ./build/server/run-server.js",
    "testcov": "nyc mocha -r ts-node/register tests/**/*.test.ts --exit",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --exit",
    "lint": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc \"src/**/*.ts\" --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/techmodel/techmodel-back.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^2.28.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.2",
    "mssql": "^6.2.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.45",
    "typescript": "^4.7.4",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^5.2.7",
    "@types/node": "^18.0.0",
    "@types/sinon": "^7.0.12",
    "@types/supertest": "^2.0.6",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.0.2",
    "dotenv": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.1",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "prettier --write",
        "git add"
      ],
      "package.json": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules",
      "build",
      "package-lock.json"
    ]
  }
}
